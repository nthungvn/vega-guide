{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "height": 500,
    "width": 400,
    "padding": 10,
    "autosize": "pad",
    "data": [
        {
            "name": "my-data",
            "url": "json/data.json"
        }
    ],
    "scales": [
        {
            "name": "xscale",
            "type": "band",
            "paddingInner": 0.3,
            "paddingOuter": 0.2,
            "range": "width",
            "domain": {
                "data": "my-data",
                "field": "category"
            },
            "round": true
        },
        {
            "name": "yscale",
            "type": "linear",
            "domain": {
                "data": "my-data",
                "field": "amount"
            },
            "range": "height",
            "nice": true
        }
    ],
    "axes": [
        {
            "scale": "xscale",
            "orient": "bottom",
            "title": "Category"
        },
        {
            "scale": "yscale",
            "orient": "left",
            "tickCount": 15,
            "offset": 10,
            "title": "Amount"
        }
    ],
    "marks": [
        {
            "type": "rect",
            "from": {
                "data": "my-data"
            },
            "encode": {
                "enter": {
                    "x": {
                        "scale": "xscale",
                        "field": "category"
                    },
                    "width": {
                        "scale": "xscale",
                        "band": 1
                    },
                    "y": {
                        "scale": "yscale",
                        "field": "amount"
                    },
                    "y2": {
                        "scale": "yscale",
                        "value": 0
                    }
                },
                "update": {
                    "fill": {
                        "value": "green"
                    }
                },
                "hover": {
                    "fill": {
                        "value": "steelblue"
                    }
                }
            }
        }
    ]
}
